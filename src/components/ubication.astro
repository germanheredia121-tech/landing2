<style>
body { font-family: 'Plus Jakarta Sans', sans-serif; }
.material-symbols-outlined { font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24; }

/* ===== REVEAL ANIMATIONS ===== */
.reveal { opacity: 0; transform: translateY(30px); transition: opacity 0.8s ease, transform 0.8s ease; }
.reveal.visible { opacity: 1; transform: translateY(0); }

/* ===== HOVER EFFECTS ON CARDS ===== */
.hover-card { transition: transform 0.5s ease, box-shadow 0.5s ease; }
.hover-card:hover { transform: translateY(-4px) scale(1.02); box-shadow: 0 20px 40px rgba(0,0,0,0.2); }

/* ===== LOCATION PIN PULSE ===== */
.map-pin { position: relative; }
.map-pin .pulse { position: absolute; inset: 0; border-radius: 9999px; background-color: rgba(17,115,212,0.2); animation: ping 1.5s cubic-bezier(0,0,0.2,1) infinite; }
.map-pin .pin { background-color: #1173d4; color: #fff; border-radius: 9999px; padding: 0.75rem; display: flex; align-items: center; justify-content: center; box-shadow: 0 0 20px rgba(17,115,212,0.5); border: 2px solid rgba(255,255,255,0.2); transition: transform 0.3s ease; }
.map-pin:hover .pin { transform: scale(1.1) rotate(-5deg); }
</style>
</head>

