      margin-bottom: 1rem;
      transition: .4s ease;
    }

    .service-card:hover .icon {
      transform: scale(1.15) rotate(-4deg);
    }

    /* LISTA ELEGANTE */
    .service-list {
      margin-top: auto;
      font-size: .9rem;
      color: rgb(100 116 139);
    }

    :global(.dark) .service-list {
      color: #92adc9;
    }

    .service-list li {
      position: relative;
      padding-left: 1.25rem;
      margin-bottom: .5rem;
    }

    .service-list li::before {
      content: "";
      position: absolute;
      left: 0;
      top: .55rem;
      width: 6px;
      height: 6px;
      border-radius: 999px;
      background: rgb(56 189 248);
    }

    @keyframes floatBg {
      from { transform: translateY(0); }
      to { transform: translateY(-40px); }
    }
  </style>
</section>
